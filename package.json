{
  "name": "flight-cms",
  "description": "Root package for the flight-cms monorepo",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "AlexY-OS",
  "homepage": "https://github.com/alexy-os/flight-cms",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexy-os/flight-cms.git"
  },
  "workspaces": [
    ".workspaces/*"
  ],
  "scripts": {
    "frontend:install": "bun install --cwd .workspaces/frontend",
    "frontend:dev": "bun run --cwd .workspaces/frontend dev",
    "frontend:build": "bun run --cwd .workspaces/frontend build",
    "frontend:css": "bun run --cwd .workspaces/frontend css",
    "frontend:watch": "bun run --cwd .workspaces/frontend watch"
  }
}